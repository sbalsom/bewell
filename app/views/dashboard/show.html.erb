<div id="upcoming-bookings" class="upcoming-bookings">
  <% if !@today_booking %>
   <h5>Your call with Dr. <%=
   @today_booking&.therapist.first_name %> <%= @today_booking&.therapist.last_name %> is today! </h5>

<div class="upcoming-booking">
  <div class="d-flex flex-row mb-3">
    <div class="booking-card">

      <div class="calendar">
      <!--   should display booking time  -->
        <p id="date"> <%= @today_booking.starts_at.strftime("%d") %> </p>
        <i class="far fa-calendar" aria-hidden="true"></i>
        <%= link_to 'Add to Calendar', edit_therapist_booking_path(@today_booking.therapist, @today_booking), class: "calendar-button d-flex mx-2" %>
      </div>
      <!-- if Time.now <= @booking.start_time + 24hours -->
            <div class="info-container d-flex flex-column">
            <div class="info">
            <h3><%= @today_booking.starts_at.strftime("%A, %d.%m.%Y %H:%M") %></h3>
            </div>
              <i class="fas fa-video" aria-hidden="true"></i>
              <%= link_to 'Start Call', therapist_booking_path(@today_booking.therapist, @today_booking),class: "session-button mx-2" %>

            </div>
             <div class="therapist-avatar"">
             <%= cl_image_tag @today_booking.therapist.photo, width: 140, class: "avatar-small" %>
              <p>Dr. <%= @today_booking.therapist.first_name %> <%= @today_booking.therapist.last_name %> </p>
            </div>
      </div>
  </div>
</div>
<% end %>
