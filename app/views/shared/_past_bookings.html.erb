<% @past_bookings.each do |booking| %>
  <div class="past-booking-card d-flex">
    <div class="avatar-box mr-4">
      <%= link_to therapist_path(booking.therapist) do %>
      <%= cl_image_tag booking.therapist.photo, width: 140, class: "avatar-small-dashboard mb-3" %>
      <% end %>
      <h5>Dr. <%= booking.therapist.first_name %> <%= booking.therapist.last_name %> </h5>
    </div>

    <div class="past-info d-flex flex-column justify-content-around ml-5">
     <div class="flex-1">
      <h3> <%= booking.starts_at.strftime("%A, %d.%m.%Y") %></h3>
       <% if booking.free %>
       <h4> 15 Minutes </h4>
       <% else %>
       <h4> 60 Minutes</h4>
       <% end %>
      </div>
      <div class="button-container d-flex">
        <% therapist = booking.therapist %>
        <%= link_to therapist_assign_me_path(therapist) do %>
        <div class="button-navy-md px-3 mx-3">
          Assign as my therapist
        </div>
        <% end %>
        <% reviewed = @my_reviews.where(therapist: therapist) %>
        <% if reviewed.blank? %>
        <%= link_to "Leave Review", new_therapist_review_path(therapist), class: "button-navy-md px-3" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

