  <a href="#" id="logo">iWell</a>
  <a href="#">Bookings</a>
  <a href="#">My Sessions</a>
</nav>


<!-- booking card -->
<div class="session-card">
  <div class="calendar">
  <!--   should display booking time  -->
    <p id="date"><%= Time.now.day %></p>
    <i class="far fa-calendar"></i>
  </div>
  <!-- if Time.now <= @booking.start_time + 24hours -->
    <% if 4+4 == 7 %>
      <div class="call">
        <i class="fas fa-video"></i>
      </div>
<!--       otherwise -->
    <% else %>
      <div class="info">
        <div class="text">
          <h6>Your next appointment is on</h6>
          <!-- booking time to a day of the week -->
          <h4><%= Time.now.strftime("%A") %></h4>
          <i class="fas fa-video-slash"></i>
        </div>
        <div class="buttons">
          <div class="reschedule">
            Reschedule
          </div>
          <div class="cancel">
            Cancel
          </div>
        </div>
      </div>
    <% end %>
</div>

<!-- stars -->
  <div class="stars">
<!--     this first line of code will be unecessary
 -->    <% therapist_avg_rating = 3.5 %>
    <% full = therapist_avg_rating.round(half: :down)  %>
 <% full.times do %>
    <div class="dark-star">
      <i class="fas fa-star"></i>
    </div>
    <% end %>
    <% if therapist_avg_rating % 1 != 0 %>
    <div class="half-star">
      <i class="fas fa-star-half-alt"></i>
    </div>
    <% end %>
    <% empty = 5 - therapist_avg_rating.round%>
    <% empty.times do %>
    <div class="light-star">
        <i class="far fa-star"></i>
    </div>
    <% end %>
  </div>

























